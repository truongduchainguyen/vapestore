        "@nestjs/schematics": "^7.1.3",
        "@nestjs/testing": "8.0.6",
        "@types/compression": "^1.7.2",
        "@types/cron": "^2.0.0",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.13",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^26.0.24",
        "@types/js-yaml": "^4.0.5",
        "@types/moment": "^2.13.0",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-ts-auto-mock": "^2.1.0",
        "prettier": "^2.3.2",
        "supertest": "^6.1.3",
        "ts-auto-mock": "^3.5.0",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^4.1.0",
        "ttypescript": "^1.5.13",
        "typescript": "^4.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
