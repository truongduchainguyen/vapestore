        "@nestjs/typeorm": "^8.0.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "http-status-codes": "^2.2.0",
        "joi": "^17.7.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
